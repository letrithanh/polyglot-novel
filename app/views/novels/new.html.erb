<div>
  <div class="md:grid md:grid-cols-3 md:gap-6">
    <div class="md:col-span-1">
      <div class="px-4 sm:px-0">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Novel Information</h3>
        <p class="mt-1 text-sm text-gray-600">This information will be displayed publicly so be careful what you share.</p>
      </div>
    </div>
    <div class="mt-5 md:col-span-2 md:mt-0" data-turbo="false">
      <%= form_with model: @novel, url: "/novels" do |form| %>
        <div class="shadow sm:overflow-hidden sm:rounded-md">
          <div class="space-y-6 bg-white px-4 py-5 sm:p-6">
            <%# ERROR MESSAGES %>
            <%= render "create_novel_errors" %>
            <%# ERROR MESSAGES %>

            <%# NAME %>
            <div>
                <%= form.label :name, "Name", class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                    <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
                </div>
            </div>
            <%# NAME %>
            
            <%# DESCRIPTION %>
            <div>
                <%= form.label :description, "Description", class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                    <%= form.text_area :description, rows: 5, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"%>
                </div>
                <p class="mt-2 text-sm text-gray-500">Brief description for your novel.</p>
            </div>
            <%# DESCRIPTION %>

            <%# UPLOAD COVER %>
            <div id="upload-cover">
                <label class="block text-sm font-medium text-gray-700">Cover photo</label>
                <div class="mt-1 flex justify-center rounded-md border-2 border-dashed border-gray-300 px-6 pt-5 pb-6 border-cover">
                    <div class="space-y-1 text-center">
                      <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48" aria-hidden="true">
                          <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                      </svg>
                      <div class="flex text-sm text-gray-600">
                          <%= form.label :cover, "Upload a file", class: "relative cursor-pointer rounded-md bg-white font-medium text-indigo-600 focus-within:outline-none focus-within:ring-2 focus-within:ring-indigo-500 focus-within:ring-offset-2 hover:text-indigo-500" %>
                          <%= form.file_field :cover, class: "sr-only upload-field", onchange: "JS.UploadImageHandler.displayUploadedImage(event, '#upload-cover .border-cover', '#upload-cover .uploaded-cover')" %>
                          <p class="pl-1">or drag and drop</p>
                      </div>
                      <p class="text-xs text-gray-500">PNG, JPG, GIF up to 10MB</p>
                    </div>
                </div>
                <div class="mt-1 hidden uploaded-cover">
                    <div class="w-full">
                      <div class="group aspect-w-16 aspect-h-9 block overflow-hidden rounded-lg bg-gray-100 focus-within:ring-2 focus-within:ring-indigo-500 focus-within:ring-offset-2 focus-within:ring-offset-gray-100">
                        <img src="" alt="uploaded-cover">
                        <button 
                            type="button" 
                            onClick="document.querySelector('#upload-cover .upload-field').click()"
                            class="absolute inset-0 focus:outline-none">
                          <span class="sr-only">cover image</span>
                        </button>
                      </div>
                    </div>
                </div>
            </div>
          </div>
          <div class="bg-gray-50 px-4 py-3 text-right sm:px-6">
            <%= form.submit "Create", class: "inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>